.mains_index__header
  .contents
    .contents__top
      %h1.contents__top__left
        = link_to "/", class: "top_logo"  do
          = image_tag src="logo/logo.png",class:"top_logo__img"
      .contents__top__right
        = form_for "#" do |f|
          = f.text_field :search,placeholder:"キーワードから探す",class:"search_box"
          %button
            .search_btn
              = image_tag src="icon/icon-search 1.png",class:"search_icon"
    .contents__bottom
      %ul.contents__bottom__left
        %li.category
          %p カテゴリー
        %li.brand
          %p ブランド
      - if user_signed_in?
        %ul.contents__bottom__right
          %li
            = link_to "ログアウト", destroy_user_session_path, method: :delete
            = link_to "マイページ", accounts_path(current_user)
      -else
        %ul.contents__bottom__right
          %li
            = link_to "ログイン", new_user_session_path
            = link_to "新規会員登録", new_user_registration_path